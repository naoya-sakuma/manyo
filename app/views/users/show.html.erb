<h1><%= @user.name %>のページ</h1>
<p>メールアドレス: <%= @user.email %></p>

<table class="tasks_index_table">
  <thead>
    <tr>
      <th><%= t('view.task_title') %></th>
      <th><%= t('view.task_content') %></th>
      <th><%= link_to t('view.task_expired_at'), tasks_path(sort_expired: "true") %></th>
      <th><%= t('view.task_created_at') %></th>
      <th><%= t('view.task_status') %></th>
      <th><%= link_to t('view.task_priority'), tasks_path(sort_priority: "true") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.tasks.each do |task| %>
      <tr class='tasks_index_tr'>
        <td class="task_row"><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.expired_at %></td>
        <td><%= task.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
        <td><%= task.status %></td>
        <td><%= task.priority %></td>
      </tr>
    <% end %>
  </tbody>
</table>
