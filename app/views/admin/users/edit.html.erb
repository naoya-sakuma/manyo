<h1><%= t('view.user_edit') %></h1>

<% if @admin_user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@admin_user.errors.count, "error") %> prohibited this <%= @admin_user.name %> from being saved:</h2>
    <ul>
    <% @admin_user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: [:admin, @admin_user], local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <%= f.label :admin, t('view.authority') %>
  <%= f.text_field :admin %>
  <%= f.submit t('view.edit_user') %>
<% end %>
