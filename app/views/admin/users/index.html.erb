<h1>ユーザー管理画面</h1>
<p><li><%= link_to t('view.button_create'), new_admin_user_path %></li></p>
<table class="tasks_index_table">
  <thead>
    <tr>
      <th><%= '名前' %></th>
      <th><%= 'メールアドレス' %></th>
      <th><%= '登録タスク数' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_users.each do |admin_user| %>
      <tr class='tasks_index_tr'>
        <td><%= admin_user.name %></td>
        <td><%= admin_user.email %></td>
        <td><%= admin_user.tasks.count %></td>
        <td><button type="button" class="btn btn-default"><%= link_to t('view.button_show'), admin_user_path(admin_user) %></button></td>
        <td><button type="button" class="btn btn-default"><%= link_to t('view.button_edit'), edit_admin_user_path(admin_user) %></button></td>
        <td><button type="button" class="btn btn-default"><%= link_to t('view.button_destroy'), admin_user_path(admin_user), method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>
