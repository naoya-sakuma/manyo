<p id="notice"><%= notice %></p>

<h1>ラベル一覧</h1>

<table>
  <thead>
    <tr>
      <th>ラベル名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @labels.each do |label| %>
      <tr>
        <td><%= label.name %></td>
        <td><%= link_to '詳細', label %></td>
        <td><%= link_to '編集', edit_label_path(label) %></td>
        <td><%= link_to '削除', label, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

